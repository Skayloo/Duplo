<Window x:Class="SGet.PathEdit"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SGet="clr-namespace:SGet"
        Height="600" Width="800"
        Title="Управление переменными окружения" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/SGet;component/Resources/download_icon.ico" Name="PathWindow" >

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="User">
            <SGet:Element x:Name="UserPathElement" PathType="User" Margin="5 5 5 -5"/>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="System">
            <SGet:Element x:Name="SystemPathElement" PathType="System" Margin="5 5 5 -5"/>
        </GroupBox>
    </Grid>
</Window>
